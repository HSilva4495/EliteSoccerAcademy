<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menu_bg"
    tools:context="club.elitesocceracademy.elitesocceracademy.MainMenu">


    <ImageButton
        android:id="@+id/announcementButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rosterButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="48dp"
        android:background="@color/menu_bg"
        app:srcCompat="@drawable/announcements" />

    <ImageButton
        android:id="@+id/gameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/practiceButton"
        android:layout_alignStart="@+id/practiceButton"
        android:layout_alignTop="@+id/announcementButton"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:background="@color/menu_bg"
        app:srcCompat="@drawable/game" />

    <ImageButton
        android:id="@+id/calendarButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rosterButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp"
        android:background="@color/menu_bg"
        app:srcCompat="@drawable/calendar" />

    <ImageButton
        android:id="@+id/rosterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@color/menu_bg"
        app:srcCompat="@drawable/roster" />

    <ImageButton
        android:id="@+id/statButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/calendarButton"
        android:layout_alignStart="@+id/calendarButton"
        android:layout_alignTop="@+id/rosterButton"
        android:background="@color/menu_bg"
        app:srcCompat="@drawable/stats" />

    <ImageButton
        android:id="@+id/practiceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@color/menu_bg"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/statButton"
        app:srcCompat="@drawable/practice" />

    <ImageButton
        android:id="@+id/settingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/hwButton"
        android:background="@color/menu_bg"
        app:srcCompat="@drawable/settings" />

    <ImageButton
        android:id="@+id/hwButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rosterButton"
        android:layout_marginTop="46dp"
        android:background="@color/menu_bg"
        app:srcCompat="@drawable/HW" />

</RelativeLayout>
